@model Assesment.DomainModels.Brand

@{
    ViewBag.Title = "CreateBrand";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}

<h2>CreateBrand</h2>
@using (Html.BeginForm("CreateBrand", "Brand", new { area = "Admin" }, FormMethod.Post))
{
    <div class="form-row row p-2">
        <div class="form-group col-md-6">
            @Html.LabelFor(temp => temp.BrandId)
            @Html.TextBoxFor(temp => temp.BrandId, new { placeholder = "Brand Id", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.BrandId)
        </div>

        <div class="form-group col-md-6">
            @Html.LabelFor(temp => temp.BrandName)
            @Html.TextBoxFor(temp => temp.BrandName, new { placeholder = "Brand Name", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.BrandName)
        </div>
    </div>

    <button type="submit" class="btn btn-success m-2">Create</button>
    <a class="btn btn-dark" href="/Admin/Brand/Index">Cancel</a>
}
