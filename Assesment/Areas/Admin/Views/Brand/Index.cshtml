@model List<Assesment.DomainModels.Brand>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}

<h2 class="mb-3">Brand list...</h2>

<div class="row">
    <div class="col-3"></div>
    <div class="col-6">
        <table class="table table-dark table-striped">
            <tr>
                <th>Brand Id</th>
                <th>Brand Name</th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@item.BrandId</th>
                    <th>@item.BrandName</th>
                    <th>
                        <a href="/Admin/Brand/DeleteBrand/@item.BrandId" class="m-1 text-danger">Delete</a>
                    </th>
                </tr>
            }
        </table>
    </div>
    <div class="col-3">
        <a class="btn btn-outline-dark" href="/Admin/Brand/CreateBrand">Add Brand</a>
    </div>
</div>

