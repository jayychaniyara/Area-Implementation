@model List<Assesment.DomainModels.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}

<h2 class="mb-3">Category list...</h2>
<div class="row">
    <div class="col-3"></div>
    <div class="col-6">
        <table class="table table-dark table-striped">
            <tr>
                <th>Category Id</th>
                <th>Category Name</th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@item.CategoryId</th>
                    <th>@item.CategoryName</th>
                    <th>
                        <a href="/Admin/Category/DeleteCategory/@item.CategoryId" class="m-1 text-danger">Delete</a>
                    </th>
                </tr>
            }
        </table>
    </div>
    <div class="col-3">
        <a class="btn btn-outline-dark" href="/Admin/Category/CreateCategory">Add Category</a>
    </div>
</div>

