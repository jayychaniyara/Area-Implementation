@model Assesment.DomainModels.Category

@{
    ViewBag.Title = "CreateCategory";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Create Category</h2>
@using (Html.BeginForm("CreateCategory", "Category", new { area = "Admin" }, FormMethod.Post))
{
    <div class="form-row row p-2">
        <div class="form-group col-md-6">
            @Html.LabelFor(temp => temp.CategoryId)
            @Html.TextBoxFor(temp => temp.CategoryId, new { placeholder = "Category Id", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.CategoryId)
        </div>

        <div class="form-group col-md-6">
            @Html.LabelFor(temp => temp.CategoryName)
            @Html.TextBoxFor(temp => temp.CategoryName, new { placeholder = "Category Name", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.CategoryName)
        </div>
    </div>

    <button type="submit" class="btn btn-success m-2">Create</button>
    <a class="btn btn-dark" href="/Admin/Category/Index">Cancel</a>
}
